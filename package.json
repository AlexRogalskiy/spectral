{
  "name": "spectral",
  "version": "0.0.1",
  "description": "Object specification analyzer and linter",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "test.cover": "jest --coverage",
    "test.watch": "jest --watch"
  },
  "author": "Stoplight, Inc. (support@stoplight.io)",
  "license": "MIT",
  "dependencies": {
    "@types/jsonpath": "^0.2.0",
    "@types/should": "^13.0.0",
    "jsonpath": "^1.0.0",
    "should": "^13.2.3"
  },
  "devDependencies": {
    "@types/node": "^10.5.7",
    "@types/jest": "^23.3.1",
    "jest": "^23.4.2",
    "ts-jest": "^23.1.3",    
    "tslib": "^1.9.3",
    "typescript": "^3.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "modulePathIgnorePatterns": [
      "lib"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
