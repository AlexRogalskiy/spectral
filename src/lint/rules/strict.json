{
  "rules": [{
      "type": "truthy",
      "name": "contact-properties",
      "path": "$.info.contact",
      "enabled": true,
      "format": "oas3",
      "description": "contact object should have name, url and email",
      "truthy": ["name", "url", "email"]
    },
    {
      "type": "truthy",
      "name": "license-url",
      "path": "$.info.license",
      "enabled": true,
      "format": "oas3",
      "description": "license object should include url",
      "truthy": "url"
    },
    {
      "type": "notContain",
      "name": "server-not-example.com",
      "path": "$.servers",
      "enabled": true,
      "format": "oas3",
      "description": "server url should not point at example.com",
      "notContain": {
        "properties": ["url"],
        "value": "example.com"
      }
    },
    {
      "type": "truthy",
      "name": "tag-description",
      "path": "$.tags",
      "enabled": true,
      "format": "oas3",
      "description": "tag object should have a description",
      "truthy": "description"
    }
  ]
}